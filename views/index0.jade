		title bengle's blog
		meta(name="keywords",content="blog")
		link(href="/public/css/index.css",rel="stylesheet",type="text/css")
	body
		#logo
			h1
				a(href="/") Bengle
			h2 A hardworking web developer
		#header
			#menu
				ul
					li.current_page_item
						a(href="/") Homepage
					li
						a(href="/list") Blogs
					li
						a(href="/pic") Photos
					li.last
						a(href="/contact") Contact
		#wrapper
			#page
				#content 
					div.post
						h1.title Welcome to my website
						div.entry
							p
						div.meta
							p.byline 
							p.links
